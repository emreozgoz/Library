@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped" >
    <tr style="background-color: rgb(252,178,22)">
        <th>Yazar ID</th>
        <th>Yazar ADI</th>
        <th>Yazar SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr >
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.SOYAD</td>
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = k.ID }, new
                {
                    @class = "btn btn-danger",
                    onclick = "return confirm('Silmek istiyor musunuz')"
                })
            </td>
            <td><a href="/Yazar/YazarGetir/@k.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@k.ID" class="btn btn-default" style="background-color: antiquewhite">Yazar Kitapları</a></td>
        </tr>
    }

</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
