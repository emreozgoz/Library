@model MvcKutuphane.Models.Entity.TBLKİTAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KitapGetir</h2>
@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>KİTAP ID</label>
            @Html.TextBoxFor(k => k.ID, new {@class = "form-control"})
        </div>
        <div style="margin-bottom:15px ">
            <label>KİTAP ADI</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px ">
            <label>Kitap Kategorisi</label>
            @Html.DropDownListFor(y=>y.TBLKATEGORİ.ID,(List<SelectListItem>)ViewBag.dgr1,new{@class="form-control"})

        </div>
        <div style="margin-bottom:15px ">
            <label>KİTAP YAZARI</label>
            @Html.DropDownListFor(y=>y.TBLYAZAR.ID,(List<SelectListItem>)ViewBag.dgr2,new{@class="form-control"})
        </div>
        <div style="margin-bottom:15px ">
            <label>BASIM YILI</label>
            @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px ">
            <label>YAYINEVİ</label>
            @Html.TextBoxFor(k => k.YAYINEVİ, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px ">
            <label>SAYFA SAYISI</label>
            @Html.TextBoxFor(k => k.SAYFA ,new { @class = "form-control" })
        </div>

    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
        <input type="hidden" name="Durum" value="True" />

    </div>
}

