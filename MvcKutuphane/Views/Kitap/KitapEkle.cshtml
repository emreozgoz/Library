@model MvcKutuphane.Models.Entity.TBLKİTAP
@{
    ViewBag.Title = "Kitap Ekle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>Kitap ADI</label>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Kategorisi</label>
        @Html.DropDownListFor(y=>y.TBLKATEGORİ.ID,(List<SelectListItem>)ViewBag.dgr1,new{@class="form-control"})
    </div>
    <div style="margin-top:15px">
        <label>Kitap Yazarı</label>
        @Html.DropDownListFor(y=>y.TBLYAZAR.ID,(List<SelectListItem>)ViewBag.dgr2,new{@class="form-control"})

    </div>
    <div style="margin-top:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(y => y.BASIMYIL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yayınevi</label>
        @Html.TextBoxFor(y => y.YAYINEVİ, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(y => y.SAYFA, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Kitap Ekle</button>
    </div>
    @*<input type="hidden" name="Durum" value="True" />*@
</form>
