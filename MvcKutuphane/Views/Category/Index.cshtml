@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORİ>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td><a href="/Category/KategoriSil/@item.ID"class="btn btn-danger">SİL</a></td>
            <td><a href="/Category/KategoriGetir/@item.ID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }

</table>
<a href="/Category/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>