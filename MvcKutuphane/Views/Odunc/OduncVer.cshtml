@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>OduncVer</h2>

<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>ÜYE ID</label>
        @*@Html.TextBoxFor(y => y.UYE, new { @class = "form-control" })*@
        @Html.DropDownListFor(y => y.TBLUYELER.ID, (List<SelectListItem>)ViewBag.dgr1,new{@class="form-control"})
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @*@Html.TextBoxFor(y => y.KITAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(y => y.TBLKİTAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>PERSONEL ID</label>
        @*@Html.TextBoxFor(y => y.PERSONEL, new { @class = "form-control" })*@
        @Html.DropDownListFor(y => y.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi </label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group">Kitabı Ödünç Ver</button>
        <input type="hidden" value="false" name="ISLEMDURUM" />
    </div>
</form>
